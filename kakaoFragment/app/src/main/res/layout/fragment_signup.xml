<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffe812">

    <ImageView
        android:id="@+id/talkImage"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:layout_constraintBottom_toTopOf="@+id/idEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/talk"/>

    <EditText
        android:id="@+id/idEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/idHint"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/passwdEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:textColorHighlight="#dddddd"/>

    <EditText
        android:id="@+id/passwdEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/passwdHint"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10sp"
        android:autofillHints=""
        android:textColorHighlight="#dddddd"/>

    <EditText
        android:id="@+id/passwdEdit2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:autofillHints=""
        android:hint="@string/passwdHint2"
        android:inputType="textPassword"
        android:textColorHighlight="#dddddd"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwdEdit" />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/signUpText"
        android:textColor="#ffffff"
        android:backgroundTint="#3a1d1d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwdEdit2"
        android:layout_margin="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>